{
    "name": "1-Click Extension Manager",
    "description": "Manage Chrome extension at the tip of your finger, with just 1-click.",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "128": "logo.png",
        "16": "logo.png"
    },
    "permissions": ["management"],
    "browser_action": {
        "default_icon": "logo.png",
        "default_popup": "popup.html"
    }
}